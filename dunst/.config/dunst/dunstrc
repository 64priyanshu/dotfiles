[global]
	# Notification Box styling
	padding = 15
	horizontal_padding = 20
	frame_width = 1
	frame_color = "#d5c4a1"
	transparency = 5
	gaps = true
	gap_size = 10

	# Text and Icon
	font = JetBrainsMono NF, Twemoji 10 # Install Twemoji font from yay (aur)
	format = "<span foreground='#bdae93'><b>%s</b></span>\n%b"
	alignment = left
	word_wrap = yes
	min_icon_size = 48
	max_icon_size = 48
	icon_path = /usr/share/icons/Papirus/48x48/status/:/usr/share/icons/Papirus/96x96/apps/:/usr/share/icons/Papirus/96x96/devices/

	# Box Dimension and Position
	width = (85, 450)
	scale = 1
	offset = (20, 40)
	progress_bar_min_width = 150
	progress_bar_max_width = 450

	# Notification elements formatting
	sticky_history = true
	stack_duplicates = true
	show_indicators = true
	sort = yes
	idle_threshold = 120
	show_age_threshold = 30

	# Mouse
	mouse_left_click=do_action, close_current
	mouse_right_click=close_current
	mouse_middle_click=close_all

	# dmenu path (use rofi)
	dmenu = /usr/bin/rofi -dmenu -p dunst

	# Browser for opening urls in context menu
	browser = /usr/bin/firefox -new-tab

	# Shortcuts
	close = ctrl+space
	close_all = ctrl+shift+space
	history = ctrl+comma
	context = ctrl+semicolon

[play_sound]
	summary = "*"
	script = ~/.local/bin/notifsound

[urgency_low]
	background = "#665c54"
	foreground = "#d5c4a1"
	highlight = "#8ec07c"
	timeout = 5

[urgency_normal]
	background = "#504945"
	foreground = "#d5c4a1"
	highlight = "#8ec07c"
	timeout = 5

[urgency_critical]
	background = "#b03728"
	foreground = "#ebdbb2"
	highlight = "#8ec07c"
	timeout = 0
