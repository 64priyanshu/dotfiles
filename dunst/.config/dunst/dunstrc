[global]

    # Notification Box styling
    padding = 15
    horizontal_padding = 20
    frame_width = 1
    frame_color = "#d5c4a1"

    # Text and Icon
    font = JetBrainsMonoNL Nerd Font, Twemoji 10 # Install Twemoji font from yay (aur)
    format = "<b>%s</b>\n%b"
    alignment = left
    word_wrap = yes
    icon_path = /usr/share/icons/Papirus/96x96/devices/:/usr/share/icons/Papirus/48x48/status/:/usr/share/icons/Papirus/96x96/apps/

    # Box Dimension and Position
    width = (85, 450)
    scale = 0
    offset = (20, 40)

    # Notification elements formatting
    stack_duplicates = true
    show_indicators = false
    sort = yes
    idle_threshold = 120
    show_age_threshold = 30

    # Mouse
    mouse_left_click=do_action, close_current
    mouse_right_click=close_current
    mouse_middle_click=close_all

    # dmenu path
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu
    browser = /usr/bin/firefox -new-tab


