#!/bin/bash

# Requires
# sudo pacman -S dunst
# sudo pacman -S xcolor
# sudo pacman -S xclip
# sudo pacman -S imagemagick

# Pick a pixel and get hex color
color=$(xcolor | tr -d "\n")

# Copy to clipboard
echo -n "$color" | xclip -selection clipboard

# Create a small color preview icon
icon="/tmp/color_preview.png"
magick -size 32x32 "xc:$color" "$icon"

# Send notification with color hex and preview
notify-send "Color copied!" "$color" -i "$icon"
